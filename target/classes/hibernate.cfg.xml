<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name = "hibernate.connection.url">jdbc:postgresql://localhost:5432/test6</property>
        <property name = "hibernate.connection.username">postgres</property>
        <property name = "hibernate.connection.password">1983</property>

        <property name="hbm2ddl.auto">update</property>

        <property name="hibernate.show_sql">true</property>

        <mapping class="com.dto.User"/>
        <mapping class="com.dto.Authority"/>
        <mapping class="com.dto.Post"/>




    </session-factory>
</hibernate-configuration>